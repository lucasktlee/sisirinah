@media all and (min-width: bp-l-min)
    /*  BASIC GRID STYLES 
    ----------------------------------------    */
    .container 
        max-width: 80rem 
        min-width: 64rem
    .column 
        margin: 0 (hs * 2)


    /*  COMMON STYLES 
        ----------------------------------------    */
    /* Set common margins for block level elements and page elements */
    figure,
    .picture, 
    #page-content .post .post-header 
        margin-bottom: lh-l 
    #page-header,
    #page-footer,
    #page-footer .rights,
    #site-navigation
        padding: lh-l 0 

    /*  FIGURES, IMAGES, AND PICTURES  
        ----------------------------------------    */
    figure,
    .picture 
        width: 100%
        &.l
            max-width: 70.4rem
        &.m 
            margin-left: auto
            margin-right: auto          
            max-width: 51.2rem 
        &.s 
            max-width: 34.4rem 
            &.left 
                float: left 
                margin-right: hs 
            &.right 
                float: right
                margin-left: hs 
        img 
            &.l,
            &.m,
            &.s 
                width: 100%


    /*  PAGE CONTENT (#page-content)
        ----------------------------------------    */
    #page-content 
        padding-bottom: lh-l
        .pagination 
            padding-top: lh-l
        .post 
            .post-footer 
                section + section 
                    border-top-width: 0
                .post-metadata,
                .post-tags 
                    float: left 
                    width: 50%


    /*  PAGE HEADER (#page-header)
        ----------------------------------------    */
    #page-header 
        img.logo 
            border-radius: 16rem 
            max-height: 18rem 
            max-width: 18rem 
