@media all and (min-width: bp-l-min) 
    /*  BODY
        ----------------------------------------    */   
    body 
        font-size: fs-l-tx
        line-height: lh-l 


    /*  COMMON STYLES 
        ----------------------------------------    */
    /* Set common bottom margin for block level elements */
    blockquote,
    dl,
    ol, 
    p,
    pre,
    table,
    ul,
    .footnotes
        margin-bottom: lh-l

    /* Set common padding and borders for blockquotes and preformatted text */
    blockquote,
    pre 
        border-left: c-at solid (hs * 1/3)
        margin-left: -(hs)

    /* Set common styles for metadata-like headings */ 
    #page-content 
        .author-archive-header h1
        .index-header h1
        .tag-archive-header h1
        .post .post-footer h2  
            heading-muted(fs-l-sm, lh-l) 


    /*  CAPTIONS 
        ----------------------------------------    */  
    caption, 
    figcaption,
    .caption 
        font-size: fs-l-sm 


    /*  CODE AND PREFORMATTED TEXT 
        ----------------------------------------    */
    code 
        font-size: fs-l-sm 
    pre 
        padding-bottom: (lh-l - 1.0rem)
        padding-top: (lh-l - 1.0rem)


    /*  FOOTNOTES 
        ----------------------------------------    */
    .footnotes
        hr.w-50 
            margin: (lh-l * 2) 0 lh-l 
        ol 
            font-size: fs-l-sm 


    /*  HEADINGS
        ----------------------------------------    */
    h1 
        heading(fs-l-h1, lh-l-h1, lh-l, lh-l)
    h2 
        heading(fs-l-h2, lh-l-h2, lh-l, lh-l)
    h3 
        heading(fs-l-h3, lh-l, lh-l, lh-l)
    h4 
        heading(fs-l-h4, lh-l)
    h5,
    h6 
        heading(fs-l-tx, lh-l)


    /*  HORIZONTAL RULES 
        ----------------------------------------    */
    hr 
        margin: lh-l 0
        &.w-50,
        &.w-75
            margin: lh-l auto


    /*  INLINE STYLES
        ----------------------------------------    */
    small 
        font-size: fs-l-sm 
    sub,
    sup 
        font-size: fs-l-tn 


    /*  LISTS 
        ----------------------------------------    */
    ol,
    ul 
        margin-left: 0
        &>li>ol
        &>li>ul
            margin-left: hs
            &>li>ol
            &>li>ul
                margin-left: hs


    /*  PARAGRAPHS
        ----------------------------------------    */
    p 
        &.lede 
            font-size: fs-l-h4 


    /*  TABLES
        ----------------------------------------    */
    table 
        td,
        th 
            padding: (lh-l * 1/2) (hs * 1/2)            
    table.condensed 
        td,
        th 
            padding: (lh-l * 1/4) (hs * 1/4)


    /*  PAGE CONTENT (#page-content)
        ----------------------------------------    */
    #page-content
        .pagination 
            nav.pages 
                font-size: fs-l-sm 
                a 
                    &.newer-posts 
                        margin-left: (hs * 2)
                    &.older-posts 
                        margin-right: (hs * 2) 
        .post 
            .post-footer 
                .post-tags 
                    ul 
                        li 
                            line-height: fs-l-tx
                            margin-bottom: (lh-l * 1/2)
                            a 
                                padding: (hs * 1/2)
            .post-header 
                time 
                    font-size: fs-l-sm 


    /*  PAGE HEADER (#page-header)
        ----------------------------------------    */
    #page-header 
        h1 
            font-size: fs-l-l


    /*  SITE NAVIGATION (#site-navigation)
        ----------------------------------------    */
    #site-navigation 
        ul 
            li 
                margin: 0 hs
